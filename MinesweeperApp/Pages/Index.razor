@page "/"
@using MinesweeperApp.Models

@inject IJSRuntime JsRuntime;

<h1>Hello, world!</h1>

<p class="text-danger">@message</p>
<div class="outter">
  <div class="inner">
    
    @foreach(var item in cells)
    {
        if(item.Visited)
        {
             if (item.IsLive)
            {
                    <button style="background-color:red"  ></button>
        
            }

            else if (item.NumberOfNeighborsLve > 0)
            {
                <button class="btn btn-info" >@item.NumberOfNeighborsLve</button>
                    
            }

            else
            {
                <button style="background-color:green; color:white"></button>
            }   
        }

        else
        {
           <button  type="button" @onclick="(() => Name(item))">?</button>
        }
          
    }
    
  </div>
</div>

